@model List<BookCatalog.Models.Book>

<h1> Book Catalog</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Published Date</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.PublishedDate.ToShortDateString()</td>
                <td>@book.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

@* Add book form *@
<div class="row mb-4">
    <div class="col-md-6">
        <h3>Add New Book</h3>
        <form method="post" asp-action="Create" asp-controller="Books">
            <div class="form-group">
                <label>Title</label>
                <input name="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label>Author</label>
                <input name="Author" class="form-control" />
            </div>
            <div class="form-group">
                <label>Genre</label>
                <input name="Genre" class="form-control" />
            </div>
            <div class="form-group">
                <label>Published Date</label>
                <input name="PublishedDate" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input name="Price" type="number" step="0.01" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Add Book</button>
        </form>
    </div>
</div>

<hr />



@section Scripts {
    <script>
        // Custom JavaScript can go here
    </script>
}
