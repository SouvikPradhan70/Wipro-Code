@model MvcBindingDemo.Models.Person
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>User Form (Simple + Complex Binding)</h1>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" type="number" />
        <span asp-validation-for="Age"></span>
    </div>

    <fieldset>
        <legend>Address</legend>
        <div>
            <label asp-for="Address.Street"></label>
            <input asp-for="Address.Street" />
            <span asp-validation-for="Address.Street"></span>
        </div>
        <div>
            <label asp-for="Address.City"></label>
            <input asp-for="Address.City" />
            <span asp-validation-for="Address.City"></span>
        </div>
        <div>
            <label asp-for="Address.ZipCode"></label>
            <input asp-for="Address.ZipCode" />
            <span asp-validation-for="Address.ZipCode"></span>
        </div>
    </fieldset>

    <button type="submit">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
